<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/stepGoal"
        android:background="@drawable/border">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp">
            <ImageView
                android:id="@+id/imgPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_plus"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/txtStepLengthValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="68"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:id="@+id/imgMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_minus"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều dài bước của bạn là khoảng 0.4 * chiều cao của bạn"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorTitle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/guide"
        android:layout_below="@+id/nothing"
        android:background="@drawable/border">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tự động tính dựa trên chiều cao của bạn"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTitle"
            />


        <TextView
            android:id="@+id/txtHeightValues"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="          170cm"
            android:textSize="17dp"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"/>

        <Switch
            android:id="@+id/autoHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_centerVertical="true" />


    </RelativeLayout>


</LinearLayout>